#include<stdio.h>

int main(void)
{
  int size;
  
  
  printf("Enter the size: ");
  scanf("%d", &size);
  
  int arr[size];


   for(int i = 0; i < size; i++) {
 
   scanf("%d", &arr[i]);
   
    
   

  }
  printf("\nReversed = ");
  for (int i = size-1; i >= 0; i--) {
    
		printf("%d ", arr[i]);
  }
  
    
    int length = sizeof(arr)/sizeof(arr[0]);    
        
      
    int max = arr[0];    
        
       
    for (int i = 0; i < length; i++) {     
         
       if(arr[i] > max)    
           max = arr[i];    
    }      
    printf("\nLargest element = %d\n", max);    
}
